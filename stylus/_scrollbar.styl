::-webkit-scrollbar
	width 0.875rem // 14px
	@media (max-width:$breakpoint-sm)
		display none

::-webkit-scrollbar-track
	// -webkit-box-shadow inset 0 0 0.375rem rgba(0,0,0,0.1) // 6px
	-webkit-box-shadow inset 0 0 0 0.875rem rgba(243,243,243,1) // 14px
	@media (max-width:$breakpoint-sm)
		display none

::-webkit-scrollbar-thumb
	background-color $secondary-darker
	outline solid 0.0625rem $secondary-darker // 1px
	border-radius 20px
	@media (max-width:$breakpoint-sm)
		display none
