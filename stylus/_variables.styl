$font-family-accents = 'Roboto Mono', monospace

$font-size-small = 0.75rem // 12px
$font-size-base-reduced = 0.875rem // 14px
$font-size-base = 1rem // 16px
$font-size-medium = 1.125rem // 18px
$font-size-large = 1.5rem // 24px
$font-size-extralarge = 2rem // 32px

// Breakpoints
$breakpoint-sm = 576px
$breakpoint-md = 768px
$breakpoint-lg = 992px
$breakpoint-xl = 1200px
