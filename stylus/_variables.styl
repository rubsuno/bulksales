// Color system
$accent-light = #EBF2FE
$accent-dark = #0025FF
$base-dark = #1A171C
$base-light = #FFFFFF
$secondary-obscure = #626262
$secondary-darker = #D8D8D8
$secondary-dark = #E3E3E3
